#include <stdio.h>
#include <stdlib.h>

const int limite = 1000;
int main(){

    int resultado = 0, i;
    
    for (i = limite - 1; i >= 0; i--){
        if (i % 3 == 0 || i % 5 == 0)
        {
            resultado = resultado + i;
        }       
        
    }

    
    printf("O valor da soma dos multiplos de 3 e 5 dentro de 1000 eh: %d\n", resultado);
}
